{
  "version": 2,
  "builds": [
    {
      "src": "WebGl/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/WebGl/$1"
    }
  ],
  "buildCommand": "git lfs install && git lfs pull",
  "headers": [
    {
      "source": "/Build/(.*\\.wasm)",
      "headers": [
        { "key": "Content-Type", "value": "application/wasm" }
      ]
    },
    {
      "source": "/Build/(.*\\.data)",
      "headers": [
        { "key": "Content-Type", "value": "application/octet-stream" }
      ]
    }
  ]
}
